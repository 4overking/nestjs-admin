{% extends 'widgets/base-widget.njk' %}

{% block input %}
  <input
    type="text"
    id="{{ column.propertyName }}"
    name="{{ column.propertyName }}"
    {% if value %}value="{{ value | date('YYYY-MM-DD hh:mm:ss') }}"{% endif %}
    pattern="[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}"
  />
{% endblock %}
