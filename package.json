{
  "name": "nestjs-admin",
  "version": "0.0.0-test3",
  "description": "description",
  "author": "William Duclot",
  "main": "libs/nestjs-admin/dist/index.js",
  "types": "libs/nestjs-admin/dist/index.d.ts",
  "directories": {
    "lib": "libs/nestjs-admin"
  },
  "license": "MIT",
  "files": [
    "libs/nestjs-admin/dist/**/*"
  ],
  "bin": "./libs/nestjs-admin/bin/cli",
  "scripts": {
    "postinstall": "cd libs/nestjs-admin && yarn install",
    "postbuild": "cp -r libs/nestjs-admin/src/public/views libs/nestjs-admin/dist/public/views",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert",
    "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
    "test:migration:run": "ts-node -r dotenv-safe/config node_modules/.bin/typeorm migration:run dotenv_config_path=.env.test",
    "schema:drop": "ts-node node_modules/.bin/typeorm schema:drop",
    "test:schema:drop": "ts-node -r dotenv-safe/config node_modules/.bin/typeorm schema:drop dotenv_config_path=.env.test",
    "reset": "rm -rf node_modules && npm install",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "nestjs-admin": "node -r dotenv-safe/config -r tsconfig-paths/register -r ts-node/register libs/nestjs-admin/bin/cli",
    "test:unit": "ts-node -r dotenv-safe/config node_modules/.bin/jest * dotenv_config_path=.env.test --maxWorkers=4",
    "test:lint": "tslint -p tsconfig.json -c tslint.json",
    "test:type": "tsc --noEmit",
    "test:watch": "jest --watch",
    "test:coverage": "ts-node -r dotenv-safe/config node_modules/.bin/jest * --coverage dotenv_config_path=.env.test --maxWorkers=4",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
    "test:e2e": "jest --config ./test/jest-e2e.json --maxWorkers=4",
    "test": "yarn test:lint && yarn test:type && yarn test:unit"
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.3.1",
    "@nestjs/typeorm": "^6.1.2",
    "connect-pg-simple": "^6.0.1",
    "dotenv-safe": "^6.1.0",
    "express-session": "^1.16.2",
    "jest-cli": "^24.9.0",
    "lodash": "^4.17.15",
    "nestjs-admin": "./libs/nestjs-admin/",
    "node-sass-middleware": "^0.11.0",
    "passport": "^0.4.0",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.3",
    "typeorm": "^0.2.18",
    "typescript": "3.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.6.0",
    "@nestjs/testing": "^6.3.1",
    "@types/connect-pg-simple": "^4.2.0",
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.121",
    "@types/node": "^10.7.1",
    "@types/node-sass-middleware": "^0.0.31",
    "@types/passport": "^1.0.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "(libs|src|test)/.*.(spec|test|int).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
